<%= simple_form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.input :name, :label => false %>
  <%= f.label :email %>
  <%= f.input :email, :label => false %>
  <%= f.label :phone_number %>
  <%= f.input :phone_number, :label => false %>

  <br>
  <%= f.submit "Submit", :class => 'btn btn-submit' %>
<% end %>
